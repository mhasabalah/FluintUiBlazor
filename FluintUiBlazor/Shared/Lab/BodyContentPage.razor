@page "/Lab/BodyContent"

<h1>BodyContent</h1>
<p>
    The <code>BodyContent</code> component is a placeholder for where the actual site content needs to be shown. It comes with some sensible CSS default settings defined.
</p>

<ApiDocumentation Component="typeof(BodyContent)" />

<h2>Example</h2>
<DemoSection Component="typeof(BodyContent)" Title="BodyContent" CollocatedFiles="@(new[] {"cs", "css"})" ComponentParameters="@(new Dictionary<string, object>(){ {"ChildContent",(RenderFragment)(builder => builder.AddMarkupContent(1,"This is some content displayed in a BodyContent component.")) } })">
    <ChildContent>
      <CodeSnippet>
&lt;BodyContent&gt;
    This is some content displayed in a BodyContent component.
&lt;/BodyContent&gt;
      </CodeSnippet>
    <p>Renders as:</p>
    </ChildContent>
</DemoSection>

